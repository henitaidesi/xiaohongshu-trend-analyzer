{
  "name": "xiaohongshu-trend-analyzer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "小红书创作趋势分析平台 - 基于53,000条真实数据的专业级内容趋势分析系统，为内容创作者和营销人员提供数据洞察和创作建议",
  "author": "智能新媒体计算综合设计团队",
  "keywords": [
    "xiaohongshu",
    "trend-analysis",
    "content-creation",
    "data-visualization",
    "react",
    "typescript",
    "vite",
    "antd",
    "echarts",
    "data-analysis",
    "social-media",
    "analytics-platform"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "serve": "npm run build && npm run preview"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "@ant-design/charts": "^2.6.0",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/styled-components": "^5.1.34",
    "antd": "^5.26.5",
    "axios": "^1.10.0",
    "dayjs": "^1.11.13",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "lodash-es": "^4.17.21",
    "openai": "^4.104.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.3",
    "recharts": "^3.1.0",
    "styled-components": "^6.1.19",
    "zustand": "^5.0.6"
  }
}
